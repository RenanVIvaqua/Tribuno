

<html>
<head>
    <script type="text/javascript">
        window.onload = function () {}
    </script>
   
</head>

<body>
    @{
        WebGrid Grid = new WebGrid();
        Grid.Bind(source: Model);
    }
    <div class="container">
        <div class="row">
            <div class="col-md-offset-1">
              
                <div class="table-wrapper">
                    <label>Valor total de Divida</label>
                    @Grid.GetHtml(
                 tableStyle: "table",
                 footerStyle: "foot",
                 displayHeader: true,
                 columns: Grid.Columns(
                     //Colunas
                     Grid.Column("ID", header: "ID", canSort: false),
                     Grid.Column("Divida", header: "Divida", canSort: false),
                     Grid.Column("Valor Total", header: "Valor Total", canSort: false)
                 ))
                </div>
            </div>
        </div>
    </div>
</body>
</html>
